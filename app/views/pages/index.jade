extends ../layout
block content
  .container
    .row
      each cat in categories
        .panel.panel-default
          .panel-heading
            h3 
              a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
          .panel-body
            if cat.movies &&cat.movies.length>0
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      if item.poster.indexOf('http:') > -1 ||item.poster.indexOf('https:') > -1
                        img(src="#{item.poster}", alt="#{item.title}" style="height:180px")
                      else
                        img(src="/upload/#{item.poster}", alt="#{item.title}" style="height:180px")
                    .caption.center-block
                      p.text-center #{item.title}
                      p.text-center: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片

